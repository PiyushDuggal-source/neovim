{
  "for": {
    "prefix": "for",
    "description": "for... (for)",
    "body": [
      "for {${1:set i 0}\\} {${2:\\$i < \\$n}\\} {${3:incr i}\\} {",
      "\t$4",
      "\\}",
      ""
    ],
    "luasnip": {
      "priority": -50
    }
  },
  "foreach": {
    "prefix": "foreach",
    "description": "foreach... (foreach)",
    "body": [
      "foreach ${1:var} ${2:\\$list} {",
      "\t$3",
      "\\}",
      ""
    ]
  },
  "if": {
    "prefix": "if",
    "description": "if... (if)",
    "body": [
      "if {${1:condition}\\} {",
      "\t$2",
      "\\}",
      ""
    ]
  },
  "proc": {
    "prefix": "proc",
    "description": "proc... (proc)",
    "body": [
      "proc ${1:name} {${2:args}\\} \\",
      "{",
      "\t$3",
      "\\}",
      ""
    ]
  },
  "switch": {
    "prefix": "switch",
    "description": "switch... (switch)",
    "body": [
      "switch ${1:-exact} -- ${2:\\$var} {",
      "\t${3:match} {",
      "\t\t$4",
      "\t\\}",
      "\tdefault {$5\\}",
      "\\}",
      ""
    ]
  },
  "while": {
    "prefix": "while",
    "description": "while... (while)",
    "body": [
      "while {${1:condition}\\} {",
      "\t$2",
      "\\}",
      ""
    ]
  }
}
